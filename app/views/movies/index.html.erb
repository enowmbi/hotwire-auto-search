<main>
  <p style="color: green"><%= notice %></p>

  <h1>Movies</h1>
  <%= form_with(url: search_movies_path, method: :post) do |form| %>
    <%= form.search_field :search_params, placeholder: "Type in movie title to search", oninput: "this.form.requestSubmit()" %>
  <% end %>

  <div id="search_results">
    <%= render "search_results"  %>
  </div>
  <hr/>
  <div id="movies">
    <% @movies.each do |movie| %>
      <%= render movie %>
      <p>
      <%= link_to "Show this movie", movie %>
      </p>
    <% end %>
  </div>

  <%= link_to "New movie", new_movie_path %>
</main>
